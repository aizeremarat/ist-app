
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Most Popular Places in Istanbul</title>
    <!-- Include Chart.js library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
          body{
            background-attachment: fixed;
            background-image: url(https://img.freepik.com/free-vector/neumorphic-round-shape-design-empty-white-banner_1017-43171.jpg?w=1060&t=st=1709371239~exp=1709371839~hmac=775746acf94c01d88b7ad8681b875d1aae208e8d1cef803dc71687dd3b4bc6a3);
        }
        .background{
            opacity: 0.8 !important;
        }
    </style>
</head>
<body>

<!-- Add the EJS code -->
<h3 style="text-align: center;">Most popular to visit places in Istanbul</h3>

<div style="max-width: 800px; margin: 0 auto;">
    <!-- Add a canvas element for the chart -->
    <canvas id="attractionsChart"></canvas>
</div>

<!-- Include the JavaScript code -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const attractionsData = {
            labels: ['Hagia Sophia', 'Topkapi Palace', 'Grand Bazaar', 'Bosphorus Bridge', 'Blue Mosque'],
            datasets: [{
                label: 'Popularity',
                data: [90, 85, 80, 75, 70],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        };

        const ctx = document.getElementById('attractionsChart').getContext('2d');
        const attractionsChart = new Chart(ctx, {
            type: 'bar',
            data: attractionsData,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

</body>
</html>
